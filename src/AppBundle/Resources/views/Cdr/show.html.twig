{% extends '::base.html.twig' %}

{% block stylesheets %}
    <style type="text/css">
        table {
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid black;
            padding: 5px 15px;
            white-space: nowrap
        }

        thead {
            background-color: #EEFFCE;
        }
    </style>
{% endblock %}

{% block body -%}
    <h1>Call â„– {{ entity.id }}</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Calldate</th>
                <td>{{ entity.calldate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Uniqueid</th>
                <td>{{ entity.uniqueid }}</td>
            </tr>
            <tr>
                <th>Accountcode</th>
                <td>{{ entity.accountcode }}</td>
            </tr>
            <tr>
                <th>Src</th>
                <td>{{ entity.src }}</td>
            </tr>
            <tr>
                <th>Dst</th>
                <td>{{ entity.dst }}</td>
            </tr>
            <tr>
                <th>Dcontext</th>
                <td>{{ entity.dcontext }}</td>
            </tr>
            <tr>
                <th>Clid</th>
                <td>{{ entity.clid }}</td>
            </tr>
            <tr>
                <th>Channel</th>
                <td>{{ entity.channel }}</td>
            </tr>
            <tr>
                <th>Dstchannel</th>
                <td>{{ entity.dstchannel }}</td>
            </tr>
            <tr>
                <th>Lastapp</th>
                <td>{{ entity.lastapp }}</td>
            </tr>
            <tr>
                <th>Lastdata</th>
                <td>{{ entity.lastdata }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ entity.duration }}</td>
            </tr>
            <tr>
                <th>Billsec</th>
                <td>{{ entity.billsec }}</td>
            </tr>
            <tr>
                <th>Disposition</th>
                <td>{{ entity.disposition }}</td>
            </tr>
            <tr>
                <th>Amaflags</th>
                <td>{{ entity.amaflags }}</td>
            </tr>
            <tr>
                <th>Userfield</th>
                <td>{{ entity.userfield }}</td>
            </tr>
            <tr>
                <th>Audio</th>
                <td>
                    <audio controls>
                        <source src=/audio/{{ entity.uniqueid|trim }}.ogg type="audio/ogg">
                        No audio found.
                    </audio>
                </td>
            </tr>
        </tbody>
    </table>

<ul class="record_actions">
    <li>
        <a href="{{ path('cdr') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
